



 addkeysection "DoomZ Menu" DoomZmenu               // here too


addmenukey "Open Menu" opnmenu
   alias opnmenu "puke 785"
   bind Del opnmenu
   
   addmenukey "Menu up" menuup
   alias menuup "puke 786"
   bind Pgup menuup

   addmenukey "Menu down" menudn
   alias menudn "puke 787"
   bind Pgdn menudn

   
  
   
   

   addmenukey "Menu Ok" menuok
   alias menuok "puke 788"
 bind End menuok
